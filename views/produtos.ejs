<%- include('partials/header') %>

<style>
</style>

<h1 class="mt-3" style="text-align: center;">Produtos cadastrados</h1>
<div class="row" style="max-width: 100%; margin-left: 1.5%; margin-right: 0; margin-bottom: 2%;">
  <%  produto.forEach(function(produtos){ %>
  <div class="col-sm-3 mt-3">
    <div class="card h-100">
      <img class="card-img-top" style="display: block; margin-left: auto; margin-right: auto;" src="/public/anexos/produtos/<%=produtos.anexoNome%>" alt="Imagem do produto">
      <div class="card-body h-100">
        <h5 class="card-title"><%=produtos.nome%></h5>
        <p class="card-text"><%=produtos.descri%></p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item" style="text-align: center;"><%=produtos.codigo%></li>
        <li class="list-group-item">
          <div class="form-floating">
            <select class="form-select" id="classificacaoSelect" aria-label="Floating label" name="categoria">
              <option class='valor'></option>
              <option class='valor'>2 entradas de 6,5 a 12mm</option>
              <option class='valor'>2 entradas de 10 a 15mm</option>
            </select>
            <label for="classificacaoSelect">Diâmetro de reentrada:</label>
          </div>
        </li>
        <li class="list-group-item">
          <div class="form-floating">
            <select class="form-select" id="classificacaoSelect" aria-label="Floating label" name="categoria">
              <option class='valor'></option>
              <option class='valor'>Amarela</option>
              <option class='valor'>Azul</option>
              <option class='valor'>Laranja</option>
            </select>
            <label for="classificacaoSelect">Cor da Cúpula:</label>
          </div>
        </li>
      </ul>
      <div class="card-body">
        <a href="#" class="btn btn-primary">Go somewhere</a>
      </div>
    </div>
  </div>
  <%})%>
</div>